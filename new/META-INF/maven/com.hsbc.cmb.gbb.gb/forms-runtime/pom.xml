<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.hsbc.cmb.gbb.gb</groupId>
        <artifactId>webapps</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>forms-runtime</artifactId>
    <packaging>war</packaging>

    <name>Backbase Forms :: Forms Runtime</name>

    <description>This module produces the final WAR of the Forms Runtime component.</description>

    <properties>
        <project.root>${basedir}/../..</project.root>
        <work.dir>${project.build.directory}/${project.build.finalName}</work.dir>
        <parent.dir>${project.parent.basedir}</parent.dir>

        <!-- Maven timestamp settings -->
        <timestamp>2017-03-28T11:37:53Z</timestamp>
        <maven.build.timestamp.format>yyyy-MM-dd HH:mm</maven.build.timestamp.format>

        <configuration.dir>${project.parent.basedir}/../configuration</configuration.dir>
        
        <hibernate.version>3.3.2.GA</hibernate.version>
        <jtds.version>1.2.8</jtds.version>
        <ojdbc.version>12.1.0.2</ojdbc.version>
        <h2.version>1.3.173</h2.version>
    </properties>

    <dependencies>


        <dependency>
            <groupId>com.hsbc.cmb.gbb.gb</groupId>
            <artifactId>forms-plugin-collection</artifactId>
            <version>${project.version}</version>
        </dependency>
		<dependency>
        	<groupId>com.hsbc.cmb.gbb.gb</groupId>
        	<artifactId>generate-pdf-plugin</artifactId>
        	<version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.backbase.forms.plugins</groupId>
            <artifactId>plugin-aggregatedao</artifactId>
            <version>5.11.2.2</version>
        </dependency>

<dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-orm</artifactId>
                <version>${spring.version}</version>
            </dependency>
            <dependency>
                <groupId>org.hibernate</groupId>
                <artifactId>hibernate-entitymanager</artifactId>
                <version>${hibernate.version}</version>
            </dependency>
            <dependency>
                <groupId>net.sourceforge.jtds</groupId>
                <artifactId>jtds</artifactId>
                <version>${jtds.version}</version>
            </dependency>

            <dependency>
                <groupId>com.oracle.ojdbc</groupId>
                <artifactId>ojdbc7</artifactId>
                <version>${ojdbc.version}</version>
            </dependency>
            <dependency>
                <groupId>com.h2database</groupId>
                <artifactId>h2</artifactId>
                <version>${h2.version}</version>
            </dependency>
        <!-- Forms runtime WAR overlay -->
        <dependency>
            <groupId>com.backbase.forms</groupId>
            <artifactId>forms-runtime</artifactId>
            <type>war</type>
        </dependency>


        <!-- Forms plugins -->
        <dependency>
            <groupId>com.backbase.forms.plugins</groupId>
            <artifactId>plugin-dev</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.forms.plugins</groupId>
            <artifactId>plugin-dev-sdk</artifactId>
        </dependency>
        <dependency>
            <groupId>com.backbase.forms.plugins</groupId>
            <artifactId>plugin-requestparameters</artifactId>
        </dependency>

        <!-- Forms SDK -->
        <dependency>
            <groupId>com.aquima</groupId>
            <artifactId>aquima-sdk-oem</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.aquima</groupId>
            <artifactId>aquima-web</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.aquima</groupId>
            <artifactId>aquima-web-sdk</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.aquima</groupId>
            <artifactId>aquima-sdk-test</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- Velocity templating -->
        <dependency>
            <groupId>org.apache.velocity</groupId>
            <artifactId>velocity</artifactId>
            <version>1.7</version>
        </dependency>

    </dependencies>

    <build>
        <finalName>forms-runtime</finalName>

        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
    </build>
</project>
